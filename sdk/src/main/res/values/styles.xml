<resources>

    <style name="box_linear_default">
        <item name="android:padding">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="button_normal" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="form_label">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="form_input">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/base_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="help_text">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/separator</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="list_view">
        <item name="android:minHeight">45dp</item>
        <item name="android:divider">@drawable/dashed_line_bitmap</item>
        <item name="android:background">@drawable/box_list_shape</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>
    <style name="list_label">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">#666666</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="simple_spinner">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/base_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="spinner_button">
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/base_text</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="date_picker">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="big_text_light">
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:textColor">#999999</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>
